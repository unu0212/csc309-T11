generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}
model User {
  id Int @id@default(autoincrement())
  username String @unique
  password String
  notes Note[]
}

model Note {
  id Int @id@default(autoincrement())
  title String
  description String
  completed Boolean
  public Boolean
  authorId Int
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)
}